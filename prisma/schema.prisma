generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  provider          String?
  providerAccountId String?
  email             String
  name              String?
  image             String
  password          String?
  role              String
  createAt DateTime @default(now())
  updateAt DateTime @default(now()) @updatedAt
}

model Partner {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  logo       String
  description String
}